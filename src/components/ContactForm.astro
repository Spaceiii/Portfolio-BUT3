---
// Composant de formulaire de contact
---

<section class="contact-section" id="contact">
  <div class="contact-container">
    <div class="contact-header">
      <h2>Me contacter</h2>
      <p class="contact-subtitle">N'hésitez pas à me contacter pour toute question ou opportunité</p>
    </div>

    <form class="contact-form" name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
      <input type="hidden" name="form-name" value="contact" />

      <!-- Honeypot pour spam -->
      <p class="hidden">
        <label>
          Ne pas remplir ce champ si vous êtes humain: <input name="bot-field" />
        </label>
      </p>

      <div class="form-row">
        <div class="form-group">
          <label for="name">
            Nom <span class="required">*</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Votre nom"
            autocomplete="name"
          />
        </div>

        <div class="form-group">
          <label for="email">
            Email <span class="required">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="votre.email@exemple.com"
            autocomplete="email"
          />
        </div>
      </div>

      <div class="form-group">
        <label for="subject">
          Sujet <span class="required">*</span>
        </label>
        <input
          type="text"
          id="subject"
          name="subject"
          required
          placeholder="L'objet de votre message"
        />
      </div>

      <div class="form-group">
        <label for="message">
          Message <span class="required">*</span>
        </label>
        <textarea
          id="message"
          name="message"
          required
          rows="6"
          placeholder="Écrivez votre message ici..."
        ></textarea>
      </div>

      <button type="submit" class="btn-submit">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
        <span>Envoyer le message</span>
      </button>
    </form>
  </div>
</section>

<style>
  .contact-section {
    padding: var(--space-4) 0;
    margin-top: var(--space-4);
  }

  .contact-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 var(--space-2);
  }

  .contact-header {
    text-align: center;
    margin-bottom: var(--space-4);
  }

  .contact-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: var(--space-2);
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-2) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .contact-subtitle {
    color: var(--color-muted);
    font-size: 1.1rem;
  }

  .contact-form {
    background: var(--color-surface);
    padding: var(--space-4);
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(2, 6, 23, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  @media (min-width: 768px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-group {
    margin-bottom: var(--space-3);
  }

  .form-group:last-of-type {
    margin-bottom: 0;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.95rem;
  }

  .required {
    color: #ef4444;
  }

  input,
  textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    font-size: 0.95rem;
    font-family: inherit;
    transition: all 0.2s ease;
    background: var(--color-bg);
    color: var(--color-text);
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(14, 165, 164, 0.1);
    background: var(--color-surface);
  }

  input::placeholder,
  textarea::placeholder {
    color: var(--color-muted);
    opacity: 0.6;
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn-submit {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.9rem 1.5rem;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--color-accent) 0%, #0d8f8e 100%);
    color: var(--color-on-accent);
    font-weight: 600;
    text-decoration: none;
    box-shadow: 0 4px 14px rgba(14, 165, 164, 0.3);
    transition: all 0.2s ease;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    margin-top: var(--space-3);
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(14, 165, 164, 0.4);
    background: linear-gradient(135deg, #10b5b4 0%, var(--color-accent) 100%);
  }

  .btn-submit:active {
    transform: translateY(0);
    box-shadow: 0 2px 10px rgba(14, 165, 164, 0.35);
  }

  .btn-submit svg {
    flex-shrink: 0;
  }

  .hidden {
    display: none;
  }

  /* États de validation */
  input:invalid:not(:placeholder-shown),
  textarea:invalid:not(:placeholder-shown) {
    border-color: #fca5a5;
  }

  input:valid:not(:placeholder-shown),
  textarea:valid:not(:placeholder-shown) {
    border-color: #86efac;
  }
</style>

