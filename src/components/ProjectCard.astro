// Fonction pour obtenir l'icône d'une technologie
const getTechIcon = (tech: string) => {
  const normalized = tech.trim().toLowerCase();

  // D'abord, chercher une correspondance exacte pour éviter les conflits (Java vs JavaScript)
  for (const [key, value] of Object.entries(techIcons)) {
    if (normalized === key.toLowerCase()) {
      return value;
    }
  }

  // Ensuite, chercher une correspondance partielle
  for (const [key, value] of Object.entries(techIcons)) {
    if (normalized.includes(key.toLowerCase()) ||
        key.toLowerCase().includes(normalized)) {
      return value;
    }
  }

  return null;
};
