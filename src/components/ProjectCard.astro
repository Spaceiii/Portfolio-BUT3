          const iconData = getTechIcon(tech);
          return (
            <li class="tag" style={iconData ? `--tag-color: ${iconData.color}` : undefined}>
              {iconData && (
                <svg
                  class="tag-icon"
                  xmlns="http://www.w3.org/2000/svg"
